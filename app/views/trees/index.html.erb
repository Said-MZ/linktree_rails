<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-100">
    <div class="container mx-auto px-4 py-12">
        <% if notice %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            <%= notice %>
        </div>
        <% end %>

        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900">My Link Trees</h1>
            <%= link_to "Create New Tree", new_tree_path, class: "bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 shadow-lg" %>
        </div>

        <% if @trees.any? %>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% @trees.each do |tree| %>
            <div class="hover:scale-105 transition duration-300">
                <%= render tree %>
            </div>
            <% end %>
        </div>

        <div class="text-center mt-12">
            <p class="text-gray-600 mb-6">
                Showing <%= @trees.count %> of your link tree<%= @trees.count == 1 ? '' : 's' %> (Page <%= @trees.current_page %> of <%= @trees.total_pages %>)
            </p>

            <div class="flex justify-center space-x-2">
                <%= link_to_previous_page @trees, '← Previous', class: "px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition duration-300 disabled:opacity-50 disabled:cursor-not-allowed #{'pointer-events-none opacity-50' unless @trees.prev_page}" %>
                <%= link_to_next_page @trees, 'Next →', class: "px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition duration-300 disabled:opacity-50 disabled:cursor-not-allowed #{'pointer-events-none opacity-50' unless @trees.next_page}" %>
            </div>
        </div>
        <% else %>
        <div class="text-center py-20">
            <div class="text-8xl mb-6">�</div>
            <h2 class="text-3xl font-semibold text-gray-700 mb-4">No trees yet</h2>
            <p class="text-xl text-gray-500 mb-8">Create your first link tree to get started</p>
            <%= link_to "Create Your First Tree", new_tree_path, class: "bg-purple-600 hover:bg-purple-700 text-white font-semibold py-4 px-8 rounded-lg transition duration-300 shadow-lg text-lg" %>
        </div>
        <% end %>
    </div>
</div>