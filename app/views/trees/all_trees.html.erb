<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-100">
    <div class="container mx-auto px-4 py-12">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">🌳 All Link Trees</h1>
            <p class="text-xl text-gray-600 mb-8">Discover amazing link trees created by our community</p>
            <div class="flex justify-center space-x-4">
                <%= link_to "Create Your Own", new_tree_path, class: "bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-300 shadow-lg" %>
                <%= link_to "My Trees", trees_path, class: "bg-white hover:bg-gray-50 text-purple-600 font-semibold py-3 px-6 rounded-lg transition duration-300 shadow-lg border border-purple-200" %>
            </div>
        </div>
        <% if @trees.any? %>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            <% @trees.each do |tree| %>
            <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition duration-300 overflow-hidden">
                <div class="p-6">
                    <div class="flex items-center justify-between mb-3">
                        <h2 class="text-lg font-semibold text-gray-900 truncate"><%= tree.display_name %></h2>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium
                  <%= case tree.style
                     when 'Classic' then 'bg-gray-100 text-gray-800'
                     when 'Modern' then 'bg-indigo-100 text-indigo-800'
                     when 'Minimal' then 'bg-gray-100 text-gray-600'
                     else 'bg-gray-100 text-gray-800'
                     end %>">
                            <%= tree.style %>
                        </span>
                    </div>

                    <div class="space-y-2 mb-4">
                        <% if tree.x.present? %>
                        <div class="flex items-center space-x-2 text-sm text-gray-600">
                            <span class="text-blue-500">𝕏</span>
                            <span class="truncate"><%= tree.x %></span>
                        </div>
                        <% end %>

                        <% if tree.instagram.present? %>
                        <div class="flex items-center space-x-2 text-sm text-gray-600">
                            <span class="text-pink-500">📷</span>
                            <span class="truncate"><%= tree.instagram %></span>
                        </div>
                        <% end %>

                        <% if tree.youtube.present? %>
                        <div class="flex items-center space-x-2 text-sm text-gray-600">
                            <span class="text-red-500">▶️</span>
                            <span class="truncate"><%= tree.youtube %></span>
                        </div>
                        <% end %>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="text-xs text-gray-500">
                            by <%= tree.user.email.split('@').first %>
                        </div>
                        <%= link_to "View Tree", tree_path(tree), class: "bg-purple-600 hover:bg-purple-700 text-white text-sm font-medium py-2 px-4 rounded-lg transition duration-300" %>
                    </div>
                </div>
            </div>
            <% end %>
        </div>

        <div class="text-center mt-12">
            <p class="text-gray-600 mb-6">
                Showing <%= @trees.count %> link tree<%= @trees.count == 1 ? '' : 's' %> (Page <%= @trees.current_page %> of <%= @trees.total_pages %>)
            </p>

            <div class="flex justify-center space-x-2">
                <%= link_to_previous_page @trees, '← Previous', class: "px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition duration-300 disabled:opacity-50 disabled:cursor-not-allowed #{'pointer-events-none opacity-50' unless @trees.prev_page}" %>
                <%= link_to_next_page @trees, 'Next →', class: "px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition duration-300 disabled:opacity-50 disabled:cursor-not-allowed #{'pointer-events-none opacity-50' unless @trees.next_page}" %>
            </div>
        </div>
        <% else %>
        <div class="text-center py-20">
            <div class="text-8xl mb-6">🌱</div>
            <h2 class="text-3xl font-semibold text-gray-700 mb-4">No trees yet</h2>
            <p class="text-xl text-gray-500 mb-8">Be the first to create a link tree!</p>
            <%= link_to "Create the First Tree", new_tree_path, class: "bg-purple-600 hover:bg-purple-700 text-white font-semibold py-4 px-8 rounded-lg transition duration-300 shadow-lg text-lg" %>
        </div>
        <% end %>
    </div>

</div>