<div class="text-center space-y-2">
    <%- if controller_name != 'sessions' %>
    <div>
        <%= link_to "Already have an account? Sign in", new_session_path(resource_name), class: "text-purple-600 hover:text-purple-800 underline text-sm" %>
    </div>
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
        <%= link_to "Need an account? Sign up", new_registration_path(resource_name), class: "text-purple-600 hover:text-purple-800 underline text-sm" %>
    </div>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-gray-600 hover:text-gray-800 underline text-sm" %>
    </div>
    <% end %>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-gray-600 hover:text-gray-800 underline text-sm" %>
    </div>
    <% end %>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
        <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-gray-600 hover:text-gray-800 underline text-sm" %>
    </div>
    <% end %>

    <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="mt-4">
        <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 shadow-lg" %>
    </div>
    <% end %>
    <% end %>
</div>